<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="#eeeeee"
    tools:context="semarnat.mac.ervic.nexura.semarnat.Tarjetas">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
<ImageView
    android:layout_width="300dp"
    android:layout_height="190dp"
    android:layout_marginTop="15dp"
    android:id="@+id/iv_tarjetas"
    android:src="@drawable/tarjeta_elektra_semarnat"
    android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_below="@+id/iv_tarjetas"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="280dp"
            android:layout_height="160dp"
            android:id="@+id/bar_code"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_codigo"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar_code"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            />


    </RelativeLayout>
    </ScrollView>
</FrameLayout>
